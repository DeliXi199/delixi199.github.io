---
const { src, alt = '', width = '100%', height } = Astro.props;

let styleWidth = '';
if (typeof width === 'string') {
  styleWidth = width;
} else if (typeof width === 'number') {
  styleWidth = `${width}px`;
}
---

<img
  src={src}
  alt={alt}
  width={undefined}
  height={height}
  loading="lazy"
  style={`display: block; margin: 1rem auto; width: ${styleWidth}; height: auto;`}
/>
